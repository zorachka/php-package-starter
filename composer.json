{
    "name": "zorachka/php-package-starter",
    "description": "PHP Package Starter",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "license": "MIT",
    "config": {
      "sort-packages": true
    },
    "authors": [
          {
              "name": "Siarhei Bautrukevich",
              "email": "hello@bautrukevich.com"
          }
      ],
    "autoload": {
        "psr-4": {
            "Zorachka\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Zorachka\\": "./tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
